                <input asp-for="SurgicalReports" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DischargeSummaries" class="control-label"></label>
                <input asp-for="DischargeSummaries" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="genric-btn primary" />
