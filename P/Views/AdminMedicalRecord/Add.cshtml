            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PatientMedicalHistory" class="control-label"></label>
                <input asp-for="PatientMedicalHistory" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Medications" class="control-label"></label>
                <input asp-for="Medications" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label"></label>
                <input asp-for="Diagnosis" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TestResults" class="control-label"></label>
                <input asp-for="TestResults" class="form-control" />
            </div>
            <div class="form-group">
